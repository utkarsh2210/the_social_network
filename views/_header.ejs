<header>
    <div id="header-container">
        <div class="web-logo">
            <p>The Social Network</p>
        </div>
        <div class="sign-container">
            <ul>
                <% if(locals.user) { %>
                    <li>
                        <a href="/users/profile"><%= user.name %></a>
                    </li>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                <% } else { %>
        
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
        
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                
                
                <% } %>
            </ul>
        </div>

    </div>
</header>