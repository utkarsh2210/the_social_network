<section id="forgot-pass">
<div class="container mt-5 bg-light p-5">
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <form class="form" method="post" action="/reset_password/send_mail">
                <div class="form-group mx-sm-3 mb-2">
                    <h3>Please Enter your Email id</h3>
                    <label for="email" class="sr-only">Email Id</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="abc@example.com" required>
                    <h6 class="mt-3 mb-3">
                        <strong>Note:</strong> 
                        A mail will be sent to this email id where a password reset link
                        will be provided. Please follow that link to reset your password.
                    </h6>
                </div>
                <button type="submit" class="btn btn-lg btn-primary mb-2 ml-3">SEND</button>
            </form>
        </div>
    </div>
</div>
</section>